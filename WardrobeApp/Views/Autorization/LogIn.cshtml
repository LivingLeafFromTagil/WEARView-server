@model WardrobeApp.Models.User

@{
    Layout = "~/Views/Shared/Autorization.cshtml";
}

<h2>Войти в учетную запись</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Login, "Введите логин")
    <br />
    @Html.EditorFor(model => model.Login)
    <br />
    @Html.LabelFor(model => model.Password, "Введите пароль")
    <br />
    @Html.EditorFor(model => model.Password)
    <br />
    <button class="enter-button" type="submit">Войти</button>
   
    <form action="/SignUp">
        <button class="enter-button type="submit">Регистрация</button>
    </form>
}